{% extends 'base.html.twig' %}

{% block title %}Hello {{user.surname}}{% endblock %}

{% block header %}
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Profil Page</h1>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
<section class="vh-100" style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-12 col-xl-4">
  
          <div class="card" style="border-radius: 15px;">
            <div class="card-body text-center">
              <div class="mt-3 mb-4">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
                  class="rounded-circle img-fluid" style="width: 100px;" />
              </div>
              <h4 class="mb-2">{{user.surname}}  {{user.name}}</h4>
              <p class="text-muted mb-4">{{user.email}}</p>
              <div class="mb-4 pb-2">
                <button type="button" class="btn bg-danger">
                  <a href="{{ path('app_remove_user', {id_user:user.id}) }}" class="text-white"  style="display:flex; align-items: center;text-decoration:none;" onclick=confirmationDelete()>
                    <svg style="margin-right: 0.5rem;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                    </svg>
                    Delete
                  </a>
              </button>
             <button type="button" class="btn btn-primary">
              <a href="{{ path('app_update_user', {id_user:user.id}) }}" class="text-white"  style="display:flex; align-items: center; text-decoration:none;">
                <svg style="margin-right: 0.5rem;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                </svg>
                Update
              </a>
             </button>
              </div>
              {# Vérifier si l'utilisateur est connecté #} 
              {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %} {# L'utilisateur est connecté, afficher le bouton "Log out" #}
                <button class="btn btn-warning btn-rounded btn-lg" type="submit">
                  <a href="{{ path('app_logout') }}" style="text-decoration:none; color:white;">
                    Log out
                  </a>
                </button>
              {% else %} {# L'utilisateur n'est pas connecté, afficher le bouton "Log in" ou "Log out" #}
                <button type="button" class="btn btn-primary btn-rounded btn-lg">
                  <a href="{{ path('app_login')}}" style="text-decoration:none; color:white;">
                    Log in
                  </a>
                </button>
              {%endif%}
              <div class="d-flex justify-content-between text-center mt-5 mb-2">
                <div>
                  <p class="mb-2 h5">8471</p>
                  <p class="text-muted mb-0">Wallets Balance</p>
                </div>
                <div class="px-3">
                  <p class="mb-2 h5">8512</p>
                  <p class="text-muted mb-0">Income amounts</p>
                </div>
                <div>
                  <p class="mb-2 h5">4751</p>
                  <p class="text-muted mb-0">Total Transactions</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script>
    function confirmationDelete() {
        var confirmation = confirm('Êtes-vous sûr de vouloir supprimer ?');

        if (confirmation) {
            // Si l'utilisateur clique sur OK, exécutez l'action de suppression ici
            // Par exemple, soumettez le formulaire de suppression ou effectuez une requête AJAX
            alert('Action de suppression effectuée');
        } else {
            // Si l'utilisateur clique sur Annuler, annulez l'action de suppression
            alert('Action de suppression annulée');
        }
    }
</script>
{% endblock %}
